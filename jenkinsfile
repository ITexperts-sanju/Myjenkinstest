pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ITexperts-sanju/Myjenkinstest
.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("simple-flask-app:latest")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("simple-flask-app:latest").run("-p 5000:5000 --name simple-flask-app")
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
